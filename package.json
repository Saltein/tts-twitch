{
  "name": "tts-twitch",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop TTS client for Twitch chat",
  "author": "Ваше Имя <you@example.com>",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "build-react": "react-scripts build",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false yarn build-react && electron-builder"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^13.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-scripts": "5.0.1",
    "redux": "^5.0.1",
    "sass": "^1.89.2",
    "tmi.js": "^1.8.5",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.tts-twitch",
    "files": [
      "build/**/*",
      "electron.js",
      "package.json",
      "src/shared/**/*",
      "src/processes/**/*",
      "src/widgets/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "forceCodeSigning": false
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
